<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.editar_mascotas.EditarMascotas">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/confirmado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="@string/tittle_actualizacion"
        android:textAlignment="center"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/id_mascota"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:hint="ID mascota"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/fotomascota" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Nombre"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nombreTextView"
                    android:layout_width="350dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bordes"
                    android:backgroundTint="@color/azulClaro"
                    android:hint="NOMBRE"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="General"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="40dp"
                    android:text="DescripciÃ³n:"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bordes"
                    android:backgroundTint="@color/amarillo">

                    <EditText
                        android:id="@+id/descriptionTextView"
                        android:layout_width="350dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bordes"
                        android:backgroundTint="@color/amarillo"
                        android:hint="Descripcion"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Genero:"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"

                    android:background="@drawable/bordes"
                    android:backgroundTint="@color/azulClaro">

                    <EditText
                        android:id="@+id/generoTextView"
                        android:layout_width="350dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bordes"
                        android:backgroundTint="@color/azulClaro"
                        android:hint="Genero"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="15sp" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Fecha de Nacimiento:"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bordes"
                    android:backgroundTint="@color/amarillo">

                    <EditText
                        android:id="@+id/fechaNacimientoTextView"
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/bordes"
                        android:backgroundTint="@color/amarillo"
                        android:hint="Fecha de nacimiento"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Raza:"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bordes"
                    android:backgroundTint="@color/amarillo">

                    <EditText
                        android:id="@+id/razaTextView"
                        android:layout_width="350dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bordes"
                        android:backgroundTint="@color/azulClaro"
                        android:hint="Raza"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Perfil del perro"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Vacunas:"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bordes"
                    android:backgroundTint="@color/amarillo">

                    <EditText
                        android:id="@+id/vacunacionTextView"
                        android:layout_width="350dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bordes"
                        android:backgroundTint="@color/amarillo"
                        android:hint="Vacunas"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="Salud"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="Alergias:"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bordes"
                        android:backgroundTint="@color/azulClaro">

                        <EditText
                            android:id="@+id/alergiasTextView"
                            android:layout_width="350dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bordes"
                            android:backgroundTint="@color/azulClaro"
                            android:hint="Alergias"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="Peso:"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bordes"
                        android:backgroundTint="@color/amarillo">

                        <EditText
                            android:id="@+id/peso_mascota"
                            android:layout_width="350dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bordes"
                            android:backgroundTint="@color/amarillo"
                            android:hint="Peso"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/actualizarmascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:backgroundTint="@color/azulClaro"
        android:text="GUARDAR" />


</LinearLayout>
